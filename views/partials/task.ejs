<article class="task">
  <div class="task__title"><h3>Task: <%= task.title %></h3></div>
  <div class="task__info">
    <p>Due in: <%= task.remainingHours %> hours.</p>
    <p>Interval: <%= task.interval %> hours.</p>
    <p>Last completed at: <%= task.lastCompletedAt %> hour mark.</p>
  </div>
  <form
    action="/profiles/<%=profile._id%>/tasks/<%=task._id%>?_method=PATCH"
    method="POST"
    class="task__sign-off-form"
  >
    <label for="newHours">Sign off at: </label>
    <input
      type="number"
      id="newHours"
      name="newHours"
      value="<%=profile.hours%>"
      max="<%=profile.hours%>"
      required
    />
    <p>hours</p>
    <button>Sign Off</button>
  </form>
</article>
